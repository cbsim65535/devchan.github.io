---
layout: null
permalink: /posts.json
---

[
{% for post in site.posts %}
  {
    "title": "{{ post.title | escape }}",
    "url": "{{ post.url }}",
    "date": "{{ post.date | date_to_xmlschema }}",
    "excerpt": "{{ post.content | strip_html | normalize_whitespace | truncate: 200 | escape }}"
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
